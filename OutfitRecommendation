import java.util.Scanner;

public class OutfitRecommendation {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        System.out.println("🎉🎉🎉 Selamat datang di aplikasi Rekomendasi Outfit! 🎉🎉🎉");
        System.out.println("Siap untuk menemukan gaya terbaikmu? Yuk, pilih tipe badanmu dan temukan outfit yang cocok!");

        // Menampilkan menu pilihan tipe badan
        System.out.println("\nPilih tipe badan kamu:");
        System.out.println("1. Pear");
        System.out.println("2. Apple");
        System.out.println("3. Hourglass");
        System.out.println("4. Rectangle");
        System.out.print("\nMasukkan pilihan tipe badan (1/2/3/4): ");
        
        // Mengambil input tipe badan dari pengguna
        int tipeBadan = scanner.nextInt() - 1;  // Dikurangi 1 untuk menyesuaikan index array

        // Menampilkan pilihan gaya (Hijab atau Non-Hijab)
        System.out.println("\nPilih gaya pakaian yang kamu inginkan:");
        System.out.println("1. Hijab");
        System.out.println("2. Non-Hijab");
        System.out.print("\nMasukkan pilihan gaya (1/2): ");
        
        // Mengambil input gaya pakaian (Hijab atau Non-Hijab)
        int pilihanGaya = scanner.nextInt() - 1; // Dikurangi 1 untuk menyesuaikan index array

        // Array rekomendasi outfit berdasarkan tipe badan dan pilihan gaya (Hijab/Non-Hijab)
        String[][][] outfitRecommendations = {
            // Tipe badan Pear (0)
            {
                // Hijab (0)
                {
                    "Atasan: Blouse panjang atau tunik, Hijab segiempat dengan warna cerah",
                    "Bawahan: Celana panjang high-waist, Rok panjang",
                    "Sepatu: Sepatu hak tinggi atau wedges",
                    "Aksesoris: Kalung panjang, Anting besar",
                    "Warna: Gelap pada bagian bawah, cerah pada bagian atas"
                },
                // Non-Hijab (1)
                {
                    "Atasan: Blouse berbahan ringan, Tunic atau top dengan garis vertikal",
                    "Bawahan: Celana high-waist, Rok pensil, Rok A-line",
                    "Sepatu: Sepatu hak tinggi atau wedges",
                    "Aksesoris: Kalung panjang, Anting besar",
                    "Warna: Gelap pada bagian bawah, cerah pada bagian atas"
                }
            },
            // Tipe badan Apple (1)
            {
                // Hijab (0)
                {
                    "Atasan: V-neck panjang atau wrap top, Hijab pashmina",
                    "Bawahan: Celana berpotongan lurus, Rok panjang, Celana rampel",
                    "Sepatu: Sepatu dengan hak, Boots",
                    "Aksesoris: Kalung pendek atau choker",
                    "Warna: Gelap pada bagian tengah, terang pada bagian luar"
                },
                // Non-Hijab (1)
                {
                    "Atasan: V-neck, Blouse longgar atau wrap top",
                    "Bawahan: Celana berpotongan lurus, Rok panjang, Celana rampel",
                    "Sepatu: Sepatu dengan hak, Boots",
                    "Aksesoris: Kalung pendek atau choker",
                    "Warna: Gelap pada bagian tengah, terang pada bagian luar"
                }
            },
            // Tipe badan Hourglass (2)
            {
                // Hijab (0)
                {
                    "Atasan: Crop top dengan outer panjang, Hijab segiempat",
                    "Bawahan: Rok midi, Celana ketat atau skinny jeans",
                    "Sepatu: Sepatu hak tinggi, Sandal dengan tali",
                    "Aksesoris: Ikat pinggang, Kalung besar",
                    "Warna: Warna netral atau warna cerah di bagian pinggang"
                },
                // Non-Hijab (1)
                {
                    "Atasan: Crop top, V-neck, Peplum",
                    "Bawahan: Rok mini, Celana ketat atau skinny jeans",
                    "Sepatu: Sepatu hak tinggi, Sandal dengan tali",
                    "Aksesoris: Ikat pinggang, Kalung besar",
                    "Warna: Warna netral atau warna cerah di bagian pinggang"
                }
            },
            // Tipe badan Rectangle (3)
            {
                // Hijab (0)
                {
                    "Atasan: Blouse dengan detail kerah atau tunik panjang, Hijab pashmina",
                    "Bawahan: Celana lebar, Rok A-line, Rok midi",
                    "Sepatu: Sepatu flat, Sneakers",
                    "Aksesoris: Tas besar, Kalung panjang",
                    "Warna: Warna terang atau pola untuk menambah bentuk tubuh"
                },
                // Non-Hijab (1)
                {
                    "Atasan: T-shirt longgar, Blouse dengan detail kerah",
                    "Bawahan: Celana lebar, Rok A-line, Rok midi",
                    "Sepatu: Sepatu flat, Sneakers",
                    "Aksesoris: Tas besar, Kalung panjang",
                    "Warna: Warna terang atau pola untuk menambah bentuk tubuh"
                }
            }
        };

        // Menampilkan rekomendasi outfit berdasarkan tipe badan dan pilihan gaya
        String[] outfit = outfitRecommendations[tipeBadan][pilihanGaya];
        String gaya = (pilihanGaya == 0) ? "Hijab" : "Non-Hijab";
        String tipe = "";
        switch (tipeBadan) {
            case 0: tipe = "Pear"; break;
            case 1: tipe = "Apple"; break;
            case 2: tipe = "Hourglass"; break;
            case 3: tipe = "Rectangle"; break;
        }
        
        System.out.println("\n✨ Rekomendasi Outfit untuk tipe badan '" + tipe + "' (" + gaya + ") ✨");
        for (String item : outfit) {
            System.out.println("- " + item);
        }

        // Penutupan yang menyenangkan
        System.out.println("\n🌟 Terima kasih sudah menggunakan aplikasi kami!");
        System.out.println("Semoga rekomendasi outfit ini membantu kamu tampil lebih percaya diri!");
        System.out.println("Sampai jumpa di lain waktu! 💖👗");
        
        // Menutup scanner
        scanner.close();
    }
}
